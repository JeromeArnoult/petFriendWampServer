 <div class="card max-w-sm bg-white rounded-lg border border-gray-200 shadow-md bg-gray-100 border-gray-300 my-8 mr-4">
    {% if post.imagePath %}
        <a href="">
        <img src="{{ asset('uploads/post_images/' ~ post.imagePath) }}" alt="image du post" class="rounded-t-lg">
        </a>
    {% endif %}
        <div class="p-5 ">
            <a href="#">
                <h2 class="mb-2 text-2xl tracking-tight text-stone-700 dark:text-stone-700">{{ post.title }}</h2>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ post.content|u.truncate(160, '...') }}</p>
            <a href="" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-lime-700 rounded-lg hover:bg-lime-400 focus:ring-4 dark:hover:bg-lime-400 dark:hover:text-stone-700 dark:focus:ring-lime-400">
            Lire plus
            <svg class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            </a>
        </div>              
</div>